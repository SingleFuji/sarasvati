<?xml version="1.0"?>

<workflow name="subwf-tasks-rej"
          xmlns="http://sarasvati.googlecode.com/workflow/"
          schemaLocation="../workflow.xsd">

  <node name="sub1" type="task">
    <arc to="sub2"/>
    <arc to="sub3"/>

    <task-def>
      <task-name>Call Distributer</task-name>
      <description>
        This task should spawn tasks "Order Stuff" and "Request Status"
      </description>
    </task-def>

  </node>

  <node name="sub2" type="task">
    <arc to="sub4"/>

    <task-def>
      <task-name>Order Stuff</task-name>
      <description>
        Order stuff now.

        Mark Complete shouldn't spawn until this and Request status are both complete.
      </description>
    </task-def>

  </node>

  <node name="sub3" type="task">
    <arc to="sub4"/>
    <task-def>
      <task-name>Request Status</task-name>
      <description>
        Get status on other orders.

        Mark Complete shouldn't spawn until this and Order Stuff are both complete.
      </description>
    </task-def>

  </node>

  <node name="sub4" type="task">

    <arc to="sub1" name="reject"/>

    <task-def>
      <task-name>Mark Complete</task-name>
      <description>
        Sign off in application in application.
      </description>
    </task-def>

  </node>

</workflow>