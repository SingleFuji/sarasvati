<?xml version="1.0"?>

<workflow name="subwf-tasks-rej"
          xmlns="http://sarasvati.googlecode.com/workflow/"
          schemaLocation="../workflow.xsd">

  <node name="sub1" type="task">
    <arc to="sub2"/>
    <arc to="sub3"/>

    <ex:task-def xmlns:ex="http://sarasvati.googlecode.com/example/"
                 ex:schemaLocation="/home/paul/workspace/wf-common/example.xsd">

      <ex:task-name>Call Distributer</ex:task-name>
      <ex:description>
        This task should spawn tasks "Order Stuff" and "Request Status"
      </ex:description>
    </ex:task-def>

  </node>

  <node name="sub2" type="task">
    <arc to="sub4"/>

    <ex:task-def xmlns:ex="http://sarasvati.googlecode.com/example/"
                 ex:schemaLocation="/home/paul/workspace/wf-common/example.xsd">
      <ex:task-name>Order Stuff</ex:task-name>
      <ex:description>
        Order stuff now.

        Mark Complete shouldn't spawn until this and Request status are both complete.
      </ex:description>
    </ex:task-def>

  </node>

  <node name="sub3" type="task">
    <arc to="sub4"/>

    <ex:task-def xmlns:ex="http://sarasvati.googlecode.com/example/"
                 ex:schemaLocation="/home/paul/workspace/wf-common/example.xsd">
      <ex:task-name>Request Status</ex:task-name>
      <ex:description>
        Get status on other orders.

        Mark Complete shouldn't spawn until this and Order Stuff are both complete.
      </ex:description>
    </ex:task-def>

  </node>

  <node name="sub4" type="task" isJoin="true">

    <arc to="sub1" name="reject"/>

    <ex:task-def xmlns:ex="http://sarasvati.googlecode.com/example/"
                 ex:schemaLocation="/home/paul/workspace/wf-common/example.xsd">

      <ex:task-name>Mark Complete</ex:task-name>
      <ex:description>
        Sign off in application in application.
      </ex:description>
    </ex:task-def>

  </node>

</workflow>