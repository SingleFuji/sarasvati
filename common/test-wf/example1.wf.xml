<?xml version="1.0"?>

<process-definition name="example1"
                       xmlns="http://sarasvati.googlecode.com/ProcessDefinition"
                       xmlns:example="http://sarasvati.googlecode.com/Example">

  <node name="start" isStart="true">
    <arc to="1"/>
  </node>

  <node name="1" type="task">
    <arc to="2"/>
    <arc to="3"/>

    <example:taskName>Enter order</example:taskName>
    <example:taskDesc>
      Enter order and billing info
    </example:taskDesc>
  </node>

  <node type="task" name="2">
    <arc to="4"/>

    <example:taskName>Bill Customer</example:taskName>
    <example:taskDesc>
      Bill the Customer
    </example:taskDesc>

  </node>

  <node type="task" name="3">
    <arc to="4"/>

    <example:taskName>Ship product</example:taskName>
    <example:taskDesc>
      Package and ship product
    </example:taskDesc>
  </node>

  <node type="task" name="4" isJoin="true">

    <example:taskName>Market to Customer</example:taskName>
    <example:taskDesc>
      Send marketing material to customer
    </example:taskDesc>

  </node>

</process-definition>