<?xml version="1.0"?>

<workflow name="example1"
          xmlns="http://sarasvati.googlecode.com/workflow/"
          schemaLocation="/home/paul/workspace/wf-common/workflow.xsd">
  <node name="start" isStart="true">
    <arc to="1"/>
  </node>

  <node name="1" type="task">
    <arc to="2"/>
    <arc to="3"/>

    <ex:task-def xmlns:ex="http://sarasvati.googlecode.com/example/"
                 ex:schemaLocation="/home/paul/workspace/wf-common/example.xsd">
      <ex:task-name>Enter order</ex:task-name>
      <ex:description>
        Enter order and billing info
      </ex:description>
    </ex:task-def>

  </node>

  <node type="task" name="2">
    <arc to="4"/>
    <ex:task-def xmlns:ex="http://sarasvati.googlecode.com/example/"
                 ex:schemaLocation="/home/paul/workspace/wf-common/example.xsd">
      <ex:task-name>Bill Customer</ex:task-name>
      <ex:description>
        Bill the Customer
      </ex:description>
    </ex:task-def>
  </node>

  <node type="task" name="3">
    <arc to="4"/>
    <ex:task-def xmlns:ex="http://sarasvati.googlecode.com/example/"
                 ex:schemaLocation="/home/paul/workspace/wf-common/example.xsd">
      <ex:task-name>Ship product</ex:task-name>
      <ex:description>
        Package and ship product
      </ex:description>
    </ex:task-def>
  </node>

  <node type="task" name="4">
    <ex:task-def xmlns:ex="http://sarasvati.googlecode.com/example/"
                 ex:schemaLocation="/home/paul/workspace/wf-common/example.xsd">
      <ex:task-name>Market to Customer</ex:task-name>
      <ex:description>
        Send marketing material to customer
      </ex:description>
    </ex:task-def>
  </node>

</workflow>